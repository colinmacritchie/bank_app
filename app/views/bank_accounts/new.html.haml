%h1
  New Bank Account

= simple_form_for @bank_accounts do |f|
  = f.input :account_number, input_html: { class: "form-control" }
  = f.association :client, input_html: { class: "form-control" }
  %hr
  .form-actions
    = button_tag type: :submit, class: "btn btn-primary" do
      Save Account
    = link_to root_path, class: "btn btn-default" do
      Cancel
